@model IEnumerable<Actor>

@{
    ViewData["Title"] = "Danh sách diễn viên";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table"> 
            <thead>
                <tr class="text-center">
                    <th class="col-md-2">@Html.DisplayNameFor(model => model.Picture)</th>
                    <th class="col-md-2">@Html.DisplayNameFor(model => model.FullName)</th>
                    <th class="col-md-5">@Html.DisplayNameFor(model => model.Description)</th>
                    <th class="col-md-3">-</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle col-md-2" >
                            <img class="rounded-circle" src="@item.Picture" alt="@item.FullName" style="max-width:150px"/>
                        </td>
                        <td class="align-middle col-md-2">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle col-md-5">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle col-md-3">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a> |
                            <a class="btn btn-outline-info"  asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i></a> |
                            <a class="btn btn-danger text-white " asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
            
        </table>

    </div>
</div>

<div style="position:fixed; right:25px; bottom:25px;" class="text-white">
    <a asp-controller="Actors" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i>Thêm diễn viên</a>
</div>