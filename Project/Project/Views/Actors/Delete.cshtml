@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Actor

@{
    ViewData["Title"] = "Xoá diễn viên";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Xác nhận xoá @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                


                    <div class="form-group text-center">
                        <img id="PictureReview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Picture" class="control-label"></label>
                        <input asp-for="Picture" class="form-control" readonly/>
                        <span asp-validation-for="Picture" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Confirm" class="btn btn-danger float-end" />
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
          
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('PictureReview');
            output.src = $("#Picture").val();
        })

      
    </script>
}
