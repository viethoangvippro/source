@model WebApplication2.Models.Cat

@{
    ViewData["Title"] = "Thêm mới danh mục";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>Thêm mới </h1>

<h4>Danh mục</h4>
<hr />
<div class="row">
    <div class="col-md-8 offset-md-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group text-center">
                <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" ; />
             </div>
            <div class="form-group">
                <label asp-for="NameCat" class="control-label"></label>
                <input asp-for="NameCat" class="form-control" />
                <span asp-validation-for="NameCat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Img" class="control-label"></label>
                <input asp-for="Img" class="form-control" />
                <span asp-validation-for="Img" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary  float-end" />
                
            </div>
            
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-secondary" asp-action="IndexTruongVietHoang"><i class="bi bi-arrow-return-left" style="max-width:50px;"></i></a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#Img").val();
        })
        $("#Img").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}
